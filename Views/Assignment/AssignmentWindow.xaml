<Window x:Class="EquipMaster.Views.Assignment.AssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:EquipMaster.ViewModels"
        Title="Выдача оборудования"
        Height="360" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <viewModels:AssignmentEditViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Дата -->
            <RowDefinition Height="Auto"/>
            <!-- Оборудование -->
            <RowDefinition Height="Auto"/>
            <!-- Пользователь -->
            <RowDefinition Height="Auto"/>
            <!-- Заметка -->
            <RowDefinition Height="*"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.ColumnSpan="2"
                   Text="Выдача оборудования"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Дата выдачи -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Дата:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <DatePicker Grid.Row="1" Grid.Column="1"
                    SelectedDate="{Binding AssignedAt}"
                    Margin="0,0,0,10"/>

        <!-- Оборудование -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Оборудование:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="2" Grid.Column="1"
                  ItemsSource="{Binding AvailableEquipments}"
                  DisplayMemberPath="SerialNumber"
                  SelectedItem="{Binding SelectedEquipment}"
                  Margin="0,0,0,10"/>

        <!-- Пользователь -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Пользователь:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="3" Grid.Column="1"
                  ItemsSource="{Binding Users}"
                  DisplayMemberPath="FullName"
                  SelectedItem="{Binding SelectedUser}"
                  Margin="0,0,0,10"/>

        <!-- Заметка при выдаче -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Заметка:" VerticalAlignment="Top" Margin="0,5,10,0"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{Binding AssignmentNotes, UpdateSourceTrigger=PropertyChanged}"
                 Height="80"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Выдать"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Отмена"
                    Width="100"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
