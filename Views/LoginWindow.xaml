<Window x:Class="EquipMaster.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="622" Width="756"
        WindowStartupLocation="CenterScreen"
        MinWidth="300" MinHeight="300"
        MaxWidth="800" MaxHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Text="Авторизация"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0" />

        <!-- Поля для логина и пароля -->
        <StackPanel Grid.Row="1" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Логин -->
            <TextBlock Text="Введите логин:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,5" />
            <TextBox x:Name="UsernameTextBox"
                     Width="250"
                     Height="30"
                     Margin="0,5,0,10"
                     HorizontalAlignment="Center" />

            <!-- Пароль -->
            <TextBlock Text="Введите пароль:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox"
                         Width="250"
                         Height="30"
                         Margin="0,5,0,10"
                         HorizontalAlignment="Center" />

            <!-- Кнопка Войти -->
            <Button Content="Войти"
                    Width="100"
                    Height="35"
                    Style="{StaticResource NavigationButtonStyle}"
                    Click="OnLoginClick"
                    HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Подвал -->
        <TextBlock Text="© 2025 EquipMaster by Alexey Yakovlev"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="2" />
    </Grid>
</Window>
