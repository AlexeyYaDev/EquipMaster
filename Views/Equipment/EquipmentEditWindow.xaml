<Window x:Class="EquipMaster.Views.Equipment.EquipmentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оборудование: Создание/Редактирование"
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Серийный номер:" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="0" Grid.Column="1" Width="250" Margin="0,5"
                 Text="{Binding EditingEquipment.SerialNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Модель:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Width="250" Margin="0,5"
                 Text="{Binding EditingEquipment.Model, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Тип оборудования:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Width="250" Margin="0,5"
                  ItemsSource="{Binding EquipmentTypes}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding EquipmentTypeId, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Дата покупки:" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <DatePicker Grid.Row="3" Grid.Column="1" Margin="0,5"
                    SelectedDate="{Binding PurchaseDate, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Статус:" Grid.Row="4" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Width="250" Margin="0,5"
                  ItemsSource="{Binding StatusValues}"
                  SelectedItem="{Binding SelectedStatus}"/>

        <TextBlock Text="Последнее ТО:" Grid.Row="5" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <DatePicker Grid.Row="5" Grid.Column="1" Margin="0,5"
                    SelectedDate="{Binding LastMaintenanceDate, Mode=TwoWay}"/>

        <TextBlock Text="Следующее ТО:" Grid.Row="6" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <DatePicker Grid.Row="6" Grid.Column="1" Margin="0,5"
                    SelectedDate="{Binding NextMaintenanceDate, Mode=TwoWay}"/>

        <TextBlock Text="Дата списания:" Grid.Row="7" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <DatePicker Grid.Row="7" Grid.Column="1" Margin="0,5"
                    SelectedDate="{Binding DecommissionDate, Mode=TwoWay}"/>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Width="100" Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Отмена" Width="100"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>