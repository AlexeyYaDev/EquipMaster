<Window x:Class="EquipMaster.Views.Reports.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчёты"
        Height="500" Width="350"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Выберите отчёт" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        
        <Button Content="Список пользователей" Margin="0,5" Padding="10" Click="ShowUsersListReport_Click"/>
        <Button Content="Состояние оборудования" Margin="0,5" Padding="10" Click="ShowEquipmentStatusReport_Click"/>
        <Button Content="История обслуживания" Margin="0,5" Padding="10" Click="ShowMaintenanceHistoryReport_Click"/>
        <Button Content="Выдачи и возвраты" Margin="0,5" Padding="10" Click="ShowAssignmentReport_Click"/>
        <Button Content="Приближающиеся ТО" Margin="0,5" Padding="10" Click="ShowUpcomingMaintenanceReport_Click"/>
        <Button Content="Журнал действий пользователей" Margin="0,5" Padding="10" Click="ShowUserActivityLogReport_Click"/>
        

        <Button Content="Закрыть" Margin="20,40,20,0" Padding="10" Click="Close_Click"/>
    </StackPanel>
</Window>