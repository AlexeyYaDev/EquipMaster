<Window x:Class="EquipMaster.Views.Maintenance.UpcomingMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EquipMaster.ViewModels"
        Title="Напоминания о ТО" Height="450" Width="700"
        WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <vm:UpcomingMaintenanceViewModel />
    </Window.DataContext>

    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top"
                   Text="Оборудование, у которого ТО запланировано в ближайшие 7 дней"
                   FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <DataGrid ItemsSource="{Binding UpcomingMaintenances}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Серийный номер" Binding="{Binding SerialNumber}" Width="*"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="*"/>
                <DataGridTextColumn Header="Тип оборудования" Binding="{Binding EquipmentType.Name}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusDisplay}" Width="*"/>
                <DataGridTextColumn Header="Следующее ТО" Binding="{Binding NextMaintenanceDate, StringFormat=dd.MM.yyyy}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
