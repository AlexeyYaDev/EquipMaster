<Window x:Class="EquipMaster.Views.Maintenance.MaintenanceLogEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:EquipMaster.ViewModels.Maintenance"
        Title="Добавить запись ТО"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.DataContext>
        <viewModels:MaintenanceLogEditViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Оборудование -->
            <RowDefinition Height="Auto"/>
            <!-- Исполнитель -->
            <RowDefinition Height="Auto"/>
            <!-- Дата -->
            <RowDefinition Height="Auto"/>
            <!-- Тип ТО -->
            <RowDefinition Height="Auto"/>
            <!-- Результат -->
            <RowDefinition Height="*"/>
            <!-- Описание -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Оборудование -->
        <TextBlock Text="Оборудование:" Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="0" Grid.Column="1"
                  ItemsSource="{Binding Equipments}"
                  DisplayMemberPath="SerialNumber"
                  SelectedItem="{Binding SelectedEquipment}"
                  Height="30" Margin="0,0,0,10"/>

        <!-- Исполнитель -->
        <TextBlock Text="Исполнитель:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding EditingLog.PerformedBy, UpdateSourceTrigger=PropertyChanged}"
                 Height="30" Margin="0,0,0,10"/>

        <!-- Дата обслуживания -->
        <TextBlock Text="Дата обслуживания:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <DatePicker Grid.Row="2" Grid.Column="1"
                    SelectedDate="{Binding EditingLog.Date}"
                    Margin="0,0,0,10"/>

        <!-- Тип обслуживания -->
        <TextBlock Text="Тип обслуживания:" Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="3" Grid.Column="1"
                  ItemsSource="{Binding MaintenanceTypes}"
                  SelectedItem="{Binding EditingLog.MaintenanceType}"
                  Height="30" Margin="0,0,0,10"/>

        <!-- Результат обслуживания -->
        <TextBlock Text="Результат ТО:" Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="4" Grid.Column="1"
                  ItemsSource="{Binding ResultOptions}"
                  SelectedItem="{Binding EditingLog.Result}"
                  Height="30" Margin="0,0,0,10"/>

        <!-- Описание -->
        <TextBlock Text="Описание:" Grid.Row="5" Grid.Column="0"
                   VerticalAlignment="Top" Margin="0,0,10,0"/>
        <TextBox Grid.Row="5" Grid.Column="1"
                 Text="{Binding EditingLog.Description}"
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Height="100" Margin="0,0,0,10"/>

        <!-- Кнопки Сохранить/Отмена -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Сохранить" Width="100" Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Отмена" Width="100"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
